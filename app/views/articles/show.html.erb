<h2>Showing selected article</h2>

<% flash.each do |name, msg| %>
<ul>
  <li><%= msg %></li>
</ul>
<% end %>

<p>
  Title: <%= @article.title%>
</p>

<p>
  Description: <%= @article.description%>
</p>

<%= link_to "Edit Article", edit_article_path(@article) %> |
<%= link_to "Back to article list", articles_path%>
