
<%= render 'shared/errors', obj: @category%>

<div class="row">

    <div class="col-xs-12">
      <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <%= f.label :Category%>
        <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.submit(@category.new_record? ? "Create" : "Update", class: "btn btn-primary btn-lg")%>
      </div>
      <% end %>

    </div>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to article listing", articles_path%> ]

    </div>

</div>
